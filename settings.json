{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); dir=$(echo \"$input\" | jq -r '.workspace.current_dir | sub(\"/Users/[^/]+\"; \"~\")'); model=$(echo \"$input\" | jq -r '.model.display_name'); branch=$(git -C \"$(echo \"$input\" | jq -r '.workspace.current_dir')\" branch --show-current 2>/dev/null || echo '-'); printf \"\\033[2m%s [%s] (%s)\\033[0m\" \"$dir\" \"$model\" \"$branch\""
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "learning-output-style@claude-plugins-official": true,
    "Notion@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "slack@claude-plugins-official": true,
    "vercel@claude-plugins-official": true,
    "supabase@claude-plugins-official": true
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-compact.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-init.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/prompt-validator.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "(Edit|Write)",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/protect-files.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "(Edit|Write)",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-format.sh",
            "timeout": 10000,
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/scan-secrets.sh",
            "timeout": 5000,
            "async": true
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/suggest-verify.sh",
            "timeout": 3000,
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "A Claude Code session is stopping. Determine if a session log reminder is needed. Say YES only if: (1) plan-mode work was done, (2) significant design decisions were made, or (3) non-obvious debugging insights were discovered. Respond with {\"ok\": true} if no reminder needed, or {\"ok\": false, \"reason\": \"Consider updating the session log â€” this session involved [brief description]\"} if warranted.",
            "timeout": 15000
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check-open-pr.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "prompt_input_exit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-cleanup.sh",
            "timeout": 5000,
            "async": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
